<div class="container-fluid">

  <h3 class="ingredients-heading">List the ingredients you already have at home to get recipe recommendations</h3>

  <div class="ingredients-search-background">
    <div class="wrapper">
      <div class="search-form2">
        <%= form_tag "/", :method => "get" do %>
            <%= text_area_tag :ingredient_search, params[:ingredient_search], placeholder: "List ingredients here:\n kale \n butternut squash \n chicken \n etc." %>
            <div class="ingredients-search-form">
              <center><button type="submit" class="my-btn-3 btn btn-primary">Search Recipes</button></center>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
