        <% if counter % 3 == 0 %>
          </div>
        <% end %>

        <% if counter % 3 == 0 %>
          <div class="row">
        <% end %>


          <div class="col-md-4">
            <% recipe.images.each do |image| %>
            <div class="hovereffect">
                <img class="img-responsive" alt="Rails" src="<%=image.url%>"></a>
                <div class="overlay">
                  <a class="info" href="/recipes/<%=recipe.id%>"><%=recipe.name%></a>
                </div>

            </div>
         <%end%>
        </div>


      <% counter += 1 %>
      <%end%>
    </div>
  </div>
</div>
